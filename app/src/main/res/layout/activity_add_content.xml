<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorapperence"
        app:navigationIcon="?attr/homeAsUpIndicator"></android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/add_img"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:visibility="gone"/>

    <VideoView
        android:id="@+id/add_video"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/add_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:textColor="@color/colorfont"
        android:hint="记事本—记录生活的点点滴滴"
        android:textColorHint="@color/colorapperence"/>
